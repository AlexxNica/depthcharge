choice
	prompt "GPIO driver"
	help
	  The driver for GPIOs on this platform.

config DRIVER_GPIO_PCH
	bool "Intel PCH"
	depends on ARCH_X86

config DRIVER_GPIO_LYNXPOINT_LP
	bool "Intel Lynxpoint LP PCH"
	depends on ARCH_X86

endchoice
